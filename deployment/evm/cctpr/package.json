{
  "name": "@stable-io/cctpr-evm-deployment",
  "version": "1.0.0",
  "private": true,
  "description": "CCTPR Deployment scripts",
  "type": "module",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "clean": "make -C ../../../contracts/cctpr/evm/ clean && rm -rf dist build-contracts",
    "build-contracts": "make -C ../../../contracts/cctpr/evm/ && mkdir -p build-contracts && cp -r ../../../contracts/cctpr/evm/out/* ./build-contracts",
    "build": "tsc --build",
    "verify-etherscan": "./verifyEtherscan.sh",
    "deploy-cctpr": "tsx src/scripts/deployCctpr.ts",
    "deploy-avax-router": "tsx src/scripts/deployAvaxRouter.ts",
    "verify-bytecode": "tsx src/scripts/verifyBytecode.ts",
    "verify-storage": "tsx src/scripts/verifyStorage.ts",
    "set-fees": "tsx src/scripts/setFees.ts",
    "transfer-ownership": "tsx src/scripts/transferOwnership.ts",
    "log-accept-ownership": "tsx src/scripts/logAcceptOwnershipCalldata.ts",
    "get-address-of-wallet": "tsx src/scripts/getAddressOfWallet.ts",
    "accept-ownership": "tsx src/scripts/acceptOwnership.ts",
    "cancel-ownership": "tsx src/scripts/cancelOwnershipTransfer.ts",
    "transfer-fee-adjuster": "tsx src/scripts/transferFeeAdjuster.ts"
  },
  "license": "MPL-2.0",
  "devDependencies": {
    "chalk": "^5.4.1",
    "eslint": "^9.22.0",
    "eslint-config": "workspace:^",
    "tsx": "^4.19.3",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@stable-io/cctp-sdk-cctpr-definitions": "workspace:^",
    "@stable-io/cctp-sdk-cctpr-evm": "workspace:^",
    "@stable-io/cctp-sdk-definitions": "workspace:^",
    "@stable-io/cctp-sdk-evm": "workspace:^",
    "@stable-io/cctp-sdk-viem": "workspace:^",
    "@stable-io/utils": "workspace:^",
    "viem": "^2.23.12"
  }
}
