{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "assets": [],
    "builder": "swc",
    "deleteOutDir": true,
    "manualRestart": true,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true,
          "introspectComments": true
        }
      }
    ],
    "tsConfigPath": "./tsconfig.json",
    "typeCheck": true,
    "watchAssets": false,
    "webpack": false
  },
  "entryFile": "main",
  "generateOptions": {
    "spec": false
  },
  "language": "ts",
  "monorepo": true,
  "sourceRoot": "src",
  "typeCheck": true
}
