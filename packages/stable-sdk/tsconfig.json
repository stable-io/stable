{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2021",
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": false,
    "baseUrl": ".",
    "rootDir": "./src",
    "noImplicitAny": false
  },
  "include": ["src/**/*", "examples/*.ts"],
  "exclude": ["node_modules", "dist"]
}
